/* components/playlist/playlist.wxss */

.music-img{
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
}
.music-img image{
  width: 100%;
  height: 100%;
}

.music-icon{
  position: absolute;
  top: 0;
  right: 0;
  height: 50rpx;
  width: 100%;
  display:flex;
  align-items: center;
  flex-direction: row-reverse;
  color: white;
  font-size: 26rpx;
  margin-right: 5rpx;
}
.music-icon image{
  width: 30rpx;
  height: 30rpx;
}

.playlist-name{
  font-size: 26rpx;
  padding: 4rpx;
  display: -webkit-box;

  overflow: hidden;

  text-overflow: ellipsis;

  word-wrap: break-word;

  white-space: normal !important;

  -webkit-line-clamp: 2;

  -webkit-box-orient: vertical;
}

